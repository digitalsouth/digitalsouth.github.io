---
layout: default
---


<div class='divider'></div>

{% comment %} Reel of recent blog posts below {% endcomment %}


<div class='row'>
    <div class="col s11 offset-s1" style="margin-top: 2em;">
        <h5 class="header" style="font-weight: 500; font-size: 2em;"><i class="material-icons" style="font-size: 1.3em; margin-right: 0.33em; top:0.15em; position: relative;">forum</i>RECENT POSTS</h5>
    </div>
    {% for post in site.posts limit:3 %}
    {% assign r = forloop.index0 | modulo:3 %}
    <div class="col s11 m5 l3 {% if r == 0  %}offset-s1 offset-m1 offset-l1{% endif %}">
            <div class="card medium">
                    <div class="card-image">
                        <img src="{{ post.img | relative_url}}" alt="{{ post.img_alt_text }}" />
                    </div>
                    <div class="card-content">
                        <span class="card-title"> {{ post.title }}</span>
                        <span class=""> {{ post.date | date: "%b %d, %Y" }} </span>
                        <div class="divider hide-on-med-and-down"></div>
                        <p class='section hide-on-med-and-down'> {{ post.excerpt | strip_html }} </p>
                    </div>
                <div class='card-action'>
                    <a href="{{ post.url | relative_url }}"> Read More</a>
                </div>
            </div>

    </div>
    {% endfor %}
</div>