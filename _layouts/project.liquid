---
layout: default
---
{% assign proj_scholar = site.scholars | where: "name", page.main_scholar | first %}

<div class="row" aria-text="project information">
<div class="col s10 offset-s1">
<h2 class="col s12 m12 header" style="width: fit-content; margin-bottom: 0;"> {{ page.title }} </h2>
{% assign scholar_list = site.scholars | map: "name"  %}

<h4 class="col s12">
<span style="margin-right: 0.1em;">Scholars Involved: </span>
{%- for scholar in page.scholars_involved -%}
    {%- if scholar_list contains scholar -%}
        {% assign scholar_url = site.scholars | where: "name", scholar | map: "url" %}
        <a href="{{- scholar_url -}}">{{ scholar }}</a>
    {%- else -%}
         {{- scholar -}}
    {%- endif -%}{% if forloop.last == false %}, {% endif %} 
{%- endfor -%} 
</h4>
<div class="col s12 divider"></div>
<div class="section col s12">
<h4 class="header">DESCRIPTION:</h4>
<blockquote class='flow-text'> {{- page.content -}} </blockquote>
{% if page.website != nan and page.website %}
<h5 class="col s12"><a href="{{ page.website }}"> See Project's Website <i class="material-icons" style="font-size: 1.1em; top:0.17em; position: relative;">launch</i></h5>
{% endif %}
</div>
</div>
</div>