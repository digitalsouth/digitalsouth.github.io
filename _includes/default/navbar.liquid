<header class="site-header">

  <nav aria-label="Main navigation menu">
    <div class="nav-wrapper">


  <a href="{{ '/' | relative_url }}" class="nav-title"> 
      DS@UNC
      </a>
      <a href="#" data-target="side-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        {% assign name_page = "" %}

        {% for page in site.pages %}
            {% unless page.title == null or page.hide or name_page contains page.title %}
            <li>
                <a title="{{ page.title | upcase }}" href="{{ page.url | relative_url }}">
                <span>{{ page.title | upcase }}</span>
                </a>
            </li>
            {% endunless %}
            {% assign name_page = page.title | append: name_page %}
        {% endfor %}
      </ul>
    </div>
  </nav>

  <ul class="sidenav" id="side-nav">
    <li><a title="HOME" href="/">HOME</a></li>
    {% for page in site.pages %}
      {% unless page.title == null or page.hide %}
        <li><a title="{{ page.title | upcase }}" href="{{ page.url | relative_url }}">{{ page.title | upcase }} </a></li>
      {% endunless %}
    {% endfor %}

  </ul>

</header>
