




{% assign num_events = site.events | size %}
    {% if num_events == 2 %}
        {% assign size = "col s8 l3 offset-s1" -%}
        {% assign offset = "offset-l1" -%}
    {% elsif num_events == 1%}
        {% assign size = "col s8 offset-s1" -%}
        {% assign offset = "offset-l1" -%}
    {% else %}
        {% assign size = "col s8 l3 offset-s1" -%}
        {% assign offset = "" -%}
    {% endif %}


{% comment %} Description Block {% endcomment %}
<div class='row' style="padding: 2em 0;">
<div class="col s9 offset-s1" style="margin-top: 0.5em; color: #467aaa;">
            <h5 class="header" style="font-weight: 500; font-size: 2em;"> ABOUT DS@UNC </h5>
        </div>
    <div class="col s10 offset-s1" style="margin-bottom: 0;">
        <p class='flow-text' style="margin-top: 0;">The Digital South is a collaboration between the University Libraries and the Southern Futures Initiative at the University of North Carolina at Chapel Hill. The Digital South aims to foster collaborative and meaningful engagement between scholars that are using digital methods to study the American South.</p>  
        <p class='flow-text' style="margin-bottom: 0;">This website highlights scholars and their projects. Navigate by accessing the Scholars, Projects, or Special Collections links, then browse or filter through the featured entries. </p>
    </div>
</div>

{% comment %} Event Block {% endcomment %}
<div style="background-color: #467aaa;">
    <div class='row'>
        <div class="col s9 offset-s1" style="margin-top: 1em;">
            <h5 class="header white-text" style="font-weight: 500; font-size: 2em;">
            <i class="material-icons" style="font-size: 1.3em; margin-right: 0.33em; top:0.15em; position: relative;">today</i>UPCOMING EVENTS </h5>
        </div>

        {% for event in site.events limit:3 %}
        
        {% comment %} Variables {% endcomment %}

        <div class="{{ size }}{% if forloop.first %} {{ offset }}{% endif %}">
            <div class="card medium">
                {% comment %} <div class="card-image">
                    <img src="{{ event.img | relative_url }}" alt="{{ event.img_alt_text | relative_url }}">
                </div> {% endcomment %}
                    <span class="event-card-date z-depth-1"> {{ event.date | date: "%b %d, %y" }} </span>
                    <img src="{{ event.icon | relative_url }}" class="event-card-type" width="150px"/>  
                <div class="card-content" style="position: relative; top: 47.5%;">
                    <h6 class="orange-text accent-2" style="margin-top: 0;"> {{ event.series }} </h6>
                    <p class="card-title" style="margin-top:0px;font-weight:600;"> {{ event.title }}{% if event.subtitle %}: </p>
                    <h6 style="margin-top:0px;" class=""> {{ event.subtitle }} </h6>
                    {% else %}
                    </h5>
                    {% endif %}
                </div>
                <div class='card-action'>
                    <a href="{{ event.link | relative_url }}">Learn More <i class="material-icons" style="font-size:0.8em; position: relative; top:0.05em;">launch</i></a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>